{
  "name": "worker-dom",
  "version": "0.0.1",
  "description": "A facsimile of a modern DOM implementation intended to run in a Web Worker.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ampproject/worker-dom.git"
  },
  "engines": {
    "yarn": ">=1.5.1",
    "node": ">=8.10.0"
  },
  "author": "Kristofer Baxter",
  "license": "Apache-2.0",
  "scripts": {
    "pretest": "rimraf src/output && tsc -p config/tsconfig.test.worker-thread.json & tsc -p config/tsconfig.test.json & tsc -p config/tsconfig.test.main-thread.json",
    "test": "ava src/output/test/",

    "pre~rollup": "rimraf src/output build && tsc -p config/tsconfig.build.worker-thread.json & tsc -p config/tsconfig.build.main-thread.json",
    "~rollup": "rollup --config config/rollup.config.js",

    "lint": "tslint -c config/tslint.json src/*/**.ts",
    "debug": "DEBUG_BUNDLE=true yarn ~rollup && node -r esm demo/server.mjs",
    "bundle": "UGLIFY_BUNDLE=true COMPRESS_BUNDLE=true yarn ~rollup"
  },
  "devDependencies": {
    "@babel/cli": "v7.0.0-beta.47",
    "@babel/core": "v7.0.0-beta.47",
    "@babel/plugin-proposal-class-properties": "v7.0.0-beta.47",
    "@babel/plugin-proposal-object-rest-spread": "v7.0.0-beta.47",
    "@babel/preset-env": "v7.0.0-beta.47",
    "ava": "0.25.0",
    "babel-plugin-minify-replace": "0.4.3",
    "babel-plugin-transform-remove-console": "6.9.4",
    "esm": "3.0.34",
    "husky": "1.0.0-rc.1",
    "lint-staged": "7.1.1",
    "polka": "0.4.0",
    "prettier": "1.12.1",
    "rimraf": "2.6.2",
    "rollup": "0.59.1",
    "rollup-plugin-babel": "4.0.0-beta.4",
    "rollup-plugin-brotli": "1.1.0",
    "rollup-plugin-gzip": "1.3.0",
    "rollup-plugin-uglify": "3.0.0",
    "serve-static": "1.13.2",
    "tslint": "5.10.0",
    "typescript": "2.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "yarn prettier --config config/.prettierrc --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  }
}
