{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es2017",
      "webworker"
    ],
    "outDir": "./dist",
    "sourceMap": false,
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": "./",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true,
    "paths": {
      "@ampproject/worker-dom/dom/*": ["packages/worker-dom/src/dom/*"]
    }
  },
  "include": [
    "./src/*.ts"
  ]
}